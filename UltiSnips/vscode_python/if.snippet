  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>if</Title>
      <Shortcut>if</Shortcut>
      <Description>Code snippet for an if statement</Description>
      <Author>Microsoft Corporation</Author>
      <SnippetTypes>
        <SnippetType>SurroundsWithStatement</SnippetType>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>condition</ID>
          <ToolTip>The condition for the if statement</ToolTip>
          <Default>True</Default>
        </Literal>
      </Declarations>
      <Code Language="Python"><![CDATA[if $condition$:
    $selected$]]></Code>
    </Snippet>  
