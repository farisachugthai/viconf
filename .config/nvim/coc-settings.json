{
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.autoTrigger": "always",
  "suggest.completionItemKindLabels": {
    "keyword"       : "\uf1de",
    "variable"      : "\ue79b",
    "value"         : "\uf89f",
    "operator"      : "\u03a8",
    "function"      : "\u0192",
    "reference"     : "\ufa46",
    "constant"      : "\uf8fe",
    "method"        : "\uf09a",
    "struct"        : "\ufb44",
    "class"         : "\uf0e8",
    "interface"     : "\uf417",
    "text"          : "\ue612",
    "enum"          : "\uf435",
    "enumMember"    : "\uf02b",
    "module"        : "\uf40d",
    "color"         : "\ue22b",
    "property"      : "\ue624",
    "field"         : "\uf9be",
    "unit"          : "\uf475",
    "event"         : "\ufacd",
    "file"          : "\uf723",
    "folder"        : "\uf114",
    "snippet"       : "\ue60b",
    "typeParameter" : "\uf728",
    "default"       : "\uf29c"
  },
  "suggest.detailField": "preview",
  "suggest.enablePreview": true,
  "suggest.fixInsertedWord": true,
  "suggest.floatEnable": true,
  "suggest.LowPrioritySourceLimit": 0,
  "suggest.keepCompleteopt": true,
  "suggest.minTriggerInputLength": 3,
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.snippetIndicator": "[Coc-US]",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 800,

  "python.analysis.diagnosticEnabled": true,
  "python.analysis.logLevel": "Warning",
  "python.analysis.openFilesOnly": false,
  "python.autoComplete.addBrackets": true,
  "python.jediEnabled": true,
  "python.jediShortcut": "Jedi",
  "python.linting.pylintEnabled": false,
  "python.terminal.executeInFileDir": true,
  "python.trace.server": "messages",
  "python.venvFolders": [
    "~/virtualenvs",
    "~/.local/share/virtualenvs/"
  ],
  "python.terminal.launchArgs": ["-c", "IPython"],
  "languageserver": {
    "python": {
      "command": "python",
      "args": [
        "-m pyls",
        "-vv",
        "--log-file",
        "~/.local/share/nvim/site/lsp_python.log"
      ],
      "trace.server": "verbose",
      "filetypes": [
        "python"
      ],
      "settings": {
        "pyls": {
          "enable": true,
          "trace": {
            "server": "verbose"
          },
          "commandPath": "python -m pyls",
          "configurationSources": [
            "flake8"
          ],
          "plugins": {
            "jedi_completion": {
              "enabled": true
            },
            "jedi_hover": {
              "enabled": true
            },
            "jedi_references": {
              "enabled": true
            },
            "jedi_signature_help": {
              "enabled": true
            },
            "jedi_symbols": {
              "enabled": true,
              "all_scopes": true
            },

            "mccabe": {
              "enabled": true,
              "threshold": 15
            },
            "preload": {
              "enabled": true
            },
            "pycodestyle": {
              "enabled": false
            },
            "pydocstyle": {
              "enabled": true,
              "match": "(?!test_).*\\.py",
              "matchDir": "[^\\.].*"
            },
            "pyflakes": {
              "enabled": true
            },
            "flake8": {
              "enabled": true

            },
            "rope_completion": {
              "enabled": true
            },
            "yapf": {
              "enabled": true
            }
          }
        }
      }
    }
  },

  "list.extendedSearchMode": true,

  "list.source.grep.defaultArgs": ["-smartcase", "-regex", "-workspace"],
  "list.source.grep.defaultOptions": ["--auto-preview", "--normal", "--interactive"],
  "list.source.grep.args": [
    "--hidden", "--smart-case", "--no-column", "--no-line-number", 
    "--no-messages", "--crlf", "--color=never", "--files"
   ],

  "list.source.symbols.defaultOptions": ["--interactive", "--number-select"],

  "list.source.files.command": "rg",
  "list.source.files.args": [
    "--hidden", "--smart-case", "--no-column", "--no-line-number", 
    "--no-messages", "--crlf", "--color=never", "--files"
  ],
  "list.source.files.excludePatterns": [
    "**/node_modules/*",
    "**/.git/*",
    "**/__pycache__/**",
    "**/*.pyc"
  ],
  "list.source.files.defaultOptions": ["--number-select", "--auto-preview", "--top"],

  "list.source.mru.maxLength": 100,
  "list.source.mru.excludePatterns": [
    "**/.git/*",
    "**/node_modules/*",
    "/tmp/*",
    "**/__pycache__/**",
    "**/*.pyc"
  ],
  "list.source.mru.defaultOptions": ["--auto-preview", "--normal"],

  "list.source.lists.defaultOptions": ["--normal", "--top"],
  // kinda wanna do this for everything
  "list.source.links.defaultOptions": ["--top", "--normal"],
  "list.source.lines.defaultOptions": ["--top", "--interactive", "--normal", "--auto-preview"],

  "list.previewHighlightGroup": "IdentifierBold",
  "list.limitLines": 500,
  "list.insertMappings": {
    "<C-r>": "do:refresh",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<C-t>": "action:tabe",
    "<C-x>": "action:split",
    "<CR>" : "do:defaultaction",
    "<A-p>": "action:preview",
    "<C-h>": "do:help",
    "<C-d>": "prompt:deleteforward"
  },
  "list.normalMappings": {
    "<C-r>" : "do:refresh",
    "d"     : "action : delete",
    "<C-x>" : "action : split",
    "<C-t>" : "action : tabe",
    "<A-p>" : "action:preview",
    "<CR>"  : "action : select"
  },
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "html", "css", "vim", "bash", "powershell", "python"],
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.previewAutoClose": true,
  "coc.preferences.hoverTarget": "preview",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.displayByAle": false,
  "diagnostic.level": "warning",
  "diagnostic.joinMessageLines": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "Coc Diagnostic: ",
  "diagnostic.messageTarget": "float",
  "diagnostic.refreshAfterSave": true,
  "signature.hideOnTextChange": true,
  "vimlsp.suggest.fromVimruntime": true,
  "git.enableGutters": true,
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips",
    "~/AppData/Local/nvim/UltiSnips"
  ],
  "snippets.extends": {"python": ["rst"]},
  "snippets.snipmate.author": "Faris A. Chugthai",
  "snippets.trace": "verbose",
  "snippets.triggerCharacters": ["Tab", "C-j"]
}
