{
	"coc.preferences.diagnostic.displayByAle": true,
    "suggest.autoTrigger": "none",
    "suggest.triggerAfterInsertEnter": true,
    "suggest.enablePreview": true,
    "suggest.noselect": true,
    "suggest.keepCompleteopt": true,
    "suggest.minTriggerInputLength": 2,
    "suggest.snippetIndicator": "[Coc-US]",
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "coc.preferences.extensionUpdateCheck": "never",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "list.source.symbols.defaultOptions": ["--interactive", "--number-select"],
    "python.condaPath": "~/miniconda3/bin/conda",
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintUseMinimalCheckers": true,
    "python.terminal.executeInFileDir": true,
    "python.venvPath": "~/miniconda3/envs/",
    "python.jediEnabled": true,
    "python.linting.banditEnabled": false,
	"list.source.grep.defaultArgs": ["-regex"],
	"list.insertMappings": {
		"<C-r>": "do:refresh",
		"<C-n>": "normal:j",
		"<C-p>": "normal:k",
		"<C-t>": "action:tabe",
		"<C-x>": "action:split",
		"<C-v>": "action:vsplit",
        "<CR>": "action:select"
	},
	"list.normalMappings": {
		"d": "action:delete",
		"<C-x>": "action:split",
		"<C-v>": "action:vsplit",
		"<C-t>": "action:tabe",
        "<CR>": "action:select"
	}
}
